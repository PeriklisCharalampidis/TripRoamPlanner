{% extends 'base.html.twig' %}

{% block title %}New Activities
{% endblock %}

{% block body %}
    <h1 class="activ text-center">Create custom activities for "{{ tripName }}" to {{ tripDestination }}</h1>
    <div class="container forms w-50">
             {{ include('activities/_form.html.twig') }}

        <div class="button-group text-center">
            {% if tripDestination is defined %}
                <a class="btn btn-outline-dark mt-2" href="{{ path('app_trip', {'destination': tripDestination}) }}">Back to the trips</a>
            {% endif %}
        </div>
       
    </div>
{% endblock %}


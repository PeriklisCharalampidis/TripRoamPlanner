{% extends 'base.html.twig' %}

{% block title %}Activities
{% endblock %}

{% block body %}
	<h1>Activities</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ activity.id }}</td>
			</tr>
			<tr>
				<th>Location</th>
				<td>{{ activity.location }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ activity.date ? activity.date|date('Y-m-d') : '' }}</td>
			</tr>
			{# <tr>
			                <th>IsPredefined</th>
			                <td>{{ activity.isPredefined ? 'Yes' : 'No' }}</td>
			            </tr> #}
			<tr>
				<th>Name</th>
				<td>{{ activity.name }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_activities_index') }}">back to list</a>

	<a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>

	{{ include('activities/_delete_form.html.twig') }}
{% endblock %}

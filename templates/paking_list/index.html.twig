{% extends 'base.html.twig' %}

{% block title %}PakingList index{% endblock %}

{% block body %}
    <h1>PakingList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsPredefined</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paking_list in paking_lists %}
            <tr>
                <td>{{ paking_list.id }}</td>
                <td>{{ paking_list.name }}</td>
                <td>{{ paking_list.isPredefined ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_paking_list_show', {'id': paking_list.id}) }}">show</a>
                    <a href="{{ path('app_paking_list_edit', {'id': paking_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paking_list_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}PakingList{% endblock %}

{% block body %}
    <h1>PakingList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paking_list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ paking_list.name }}</td>
            </tr>
            <tr>
                <th>IsPredefined</th>
                <td>{{ paking_list.isPredefined ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('app_trips_packinglist', {'season': season}) }}">Back to list</a>

    <a href="{{ path('app_paking_list_edit', {'season': season,'id': paking_list.id}) }}">Edit</a>

    {{ include('paking_list/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Trip
{% endblock %}

{% block body %}
	<h1>
		MyTrip</h1>

	<div class="container">

		<div class="card ">

			<div class="card-body">
				{% if trip.image is not null %}
					<img class="card-img-top rounded" src="{{ asset('images/' ~ trip.image) }}" alt="Trip image">
				{% endif %}
				{# <img src="{{ trip.image }}" class="card-img-top" alt="..."> #}

				<h5 class="card-title mt-3">{{ trip.name }}</h5>

				<h5>Destination:</h5>
				<p class="card-text">
					{{ trip.destination }}</p>
				<h5>Type:</h5>
				<p class="card-text">{{ trip.dateBegin ? trip.dateBegin|date('Y-m-d') : '' }}</p>
				<p class="card-text">{{ trip.dateEnd ? trip.dateEnd|date('Y-m-d') : '' }}</p>
				<a class="btn btn-warning" href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>
			</div>
			<a href="{{ path('app_trip_index',{'id':app.user.id}) }}">back to list</a>

		</div>


		{{ include('trip/_delete_form.html.twig') }}
	{% endblock %}
